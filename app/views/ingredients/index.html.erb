<div>
  <h1 class="font-bold text-4xl">Ingredients#index</h1>
  <p>Find me in app/views/ingredients/index.html.erb</p>
  <% @ingredient.each do |ingredient| %>
    <p><%= ingredient.name %></p>
    <p><%= ingredient.body %></p>
    <% ingredient.symptoms.each do |symptom| %>
      <%= symptom.name %>
    <% end %>
  <% end %>
</div>
